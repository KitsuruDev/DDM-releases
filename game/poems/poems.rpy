## Просмотр стихов
label show_poem(poem, music=True, track=None, img=None, where=i11, paper=None):
    play sound page_turn

    if not poem.coop and music:
        $ currentpos = get_pos()
        if track: # перед запуском должна быть тишина (пример - музыка при безумном стихе Юри)
            $ audio.t5b = "<from " + str(currentpos) + " loop 4.444>" + track
        else:
            $ audio.t5b = "<from " + str(currentpos) + " loop 4.444>bgm/5_" + poem.author + ".ogg"
            stop music fadeout 2.0
            $ renpy.music.play(audio.t5b, channel="music_poem", fadein=2.0, tight=True)

    window hide

    $ renpy.game.preferences.afm_enable = False

    if paper:
        show screen poem(poem, paper=paper)
    else:
        show screen poem(poem)

    with Dissolve(1)

    if not persistent.first_poem:
        show hint_poem at hint_position

    $ plot_pause()

    if img:
        $ renpy.hide(poem.author)
        $ renpy.show(img, at_list=[where])

    hide screen poem
    with Dissolve(.5)

    if not persistent.first_poem:
        $ persistent.first_poem = True
        $ renpy.save_persistent()

        hide hint_poem
        pause 1.0

    window auto

    return
