## Poem Screen ################################################################

screen poem(currentpoem, paper="paper"):
    style_prefix "poem"

    vbox:
        add paper

    viewport id "vp":
        child_size (710, None)

        mousewheel True
        arrowkeys True
        draggable True

        has vbox

        null height 40

        if currentpoem.coop:
            text "[currentpoem.title]\n\n[currentpoem.text]" style "coop_text"
        else:
            if currentpoem.title == "":
                text "[currentpoem.text]" style str(currentpoem.author) + "_text"
            else:
                text "[currentpoem.title]\n\n[currentpoem.text]" style str(currentpoem.author) + "_text"

        null height 100

    vbar value YScrollValue(viewport="vp") style "poem_vbar"

